<script>
let seconds = 5;
const timer = document.getElementById("countdown");

const countdown = setInterval(() => {
  seconds--;
  timer.textContent = seconds;
  if (seconds <= 0) {
    clearInterval(countdown);
    window.location.href = "https://www.facebook.com/photo.php?fbid=3920836284852500&set=pb.100007785019549.-2207520000&type=3"; // الرابط النهائي بعد انتهاء العد
  }
}, 1000);
</script>

