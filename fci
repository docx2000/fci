    <!-- Countdown -->
    <div class="countdown">
      Redirecting in <span id="timer">5</span> seconds...
    </div>
    <div class="hint">Please wait, you'll be redirected automatically</div>
  </div>

  <script>
    let seconds = 5;
    const timer = document.getElementById("timer");

    const countdown = setInterval(() => {
      seconds--;
      timer.textContent = seconds;
      if (seconds <= 0) {
        clearInterval(countdown);
        window.location.href = "https://www.facebook.com/photo.php?fbid=3920836284852500&set=pb.100007785019549.-2207520000&type=3"; // اللينك اللي انت عايزه
      }
    }, 1000);
  </script>
